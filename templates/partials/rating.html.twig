<span class="rating">
  {% for i in 1..5 %}
    {% if i <= rating %}
        <i class="fas fa-star"></i>
    {% else %}
      {% if i - rating < 0.75 %}
        <i class="fas fa-star-half-alt"></i>
      {% else %}
        <i class="far fa-star"></i>
      {% endif %}
    {% endif %}
  {% endfor %}
</span>
